meta {
  name: validate user
  type: http
  seq: 1
}

get {
  url: https://graph.microsoft.com/v1.0/users?$select=id, userType, mail, userPrincipalName, displayName, mobilePhone, jobTitle, department, officeLocation&$filter=( (UserPrincipalName eq '{{entityUpn}}' and UserType eq 'Member') or (Mail eq '{{entityUpn}}' and UserType eq 'Guest') )&$top=1
  body: none
  auth: inherit
}

params:query {
  $select: id, userType, mail, userPrincipalName, displayName, mobilePhone, jobTitle, department, officeLocation
  $filter: ( (UserPrincipalName eq '{{entityUpn}}' and UserType eq 'Member') or (Mail eq '{{entityUpn}}' and UserType eq 'Guest') )
  $top: 1
}

vars:post-response {
  userId: res.body.value[0].id
}
